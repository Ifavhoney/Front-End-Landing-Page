<!--#region html header-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= title %></title>
    <!-- CSS Sections -->
    <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css" />

    <link rel="stylesheet" href="Content/app.css" />
  </head>

  <body>
    <!--endregion-->
    <!--#region Header -->
    <header>
      <nav
        class="family-sans navbar navbar-expand-lg navbar-dark navbar-default"
      >
        <a class="navbar-brand" href="/">
          <%= title %>
          <img src="Assets/images/doggy.png" class="img-responsive logo" />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <!-- If/Else for home before the nav link due to rendering -->
            <% if (title == "Home"){ %>
            <li class="nav-item active">
              <%} else{ %>
            </li>

            <li class="nav-item">
              <%} %>

              <a class="nav-link" href="/">
                <i class="fa fa-address-book-o"> </i> Home
              </a>

              <% if (title == "About Me"){ %>
            </li>

            <li class="nav-item active">
              <%} else{ %>
            </li>

            <li class="nav-item">
              <%} %>

              <a class="nav-link" href="/about"
                ><i class="fa fa-code" aria-hidden="true"></i>
    About</a>

              
            </li>

            <% if (title == "My Projects"){ %>
            <li class="nav-item active">
              <%} else{ %>
            </li>

            <li class="nav-item">
              <%} %>

              <a class="nav-link" href="/Projects"
                ><i class="fa fa-paper-plane-o" aria-hidden="true"></i> Projects</a
              >
            </li>
            <% if (title == "My Services"){ %>
            <li class="nav-item active"><% } else{ %></li>

            <li class="nav-item">
              <% }%>
              <a class="nav-link" href="/Services"
                ><i class="fa fa-lg fa-facebook"></i> Services</a
              >
            </li>
            <% if (title == "Contact Me"){ %>
            <li class="nav-item active"><% } else{ %></li>

            <li class="nav-item">
              <% }%>
              <a class="nav-link" href="/Contact"
                ><i class="fa fa-sticky-note-o"></i> Contact</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <!--#endregion -->

    <!--#region Generic Content Header -->
<br/>
    <div class="container">
      <div class="jumbotron">
        <h1 class="display-4"><%=title %></h1>
        <!--#endregion -->
    
